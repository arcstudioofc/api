{
  "name": "api",
  "version": "0.1.0",
  "scripts": {
    "dev": "bun run --watch --env-file=.env.local src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "bun run dist/src/server.js",
    "server:compile": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/server src/server.ts",
    "server:start": "./dist/server"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.13",
    "argon2": "^0.44.0",
    "better-auth": "^1.4.12",
    "chalk": "^5.6.2",
    "elysia": "latest",
    "mongodb": "^7.0.0",
    "pino": "^10.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "bun-types": "latest",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "module": "src/src/server.js"
}
